// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  name        String
  phoneNumber String
  password    String
  referal     String
  addCard     Card[]
  contacts    Contacts[]
}

model Card {
  id       String @id @default(uuid())
  ballance String
  code     String
  cvv      Int
  date     String
  user     User   @relation(fields: [userId], references: [id])
  userId   String
}

model Contacts {
  id          String @id @default(uuid())
  name        String
  phoneNumber String
  user        User   @relation(fields: [userId], references: [id])
  userId      String
}
